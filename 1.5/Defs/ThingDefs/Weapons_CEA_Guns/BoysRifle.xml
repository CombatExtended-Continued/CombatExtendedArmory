<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Boys ATR ==================== -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>CE_Gun_BoysRifle</defName>
		<label>Boys anti-tank rifle</label>
		<description>Ancient bolt-action anti-tank rifle. Although obsolete against actual tanks, it fires an anti-materiel cartridge and is still used by rimworlders against moderately armored targets.</description>
		<graphicData>
			<texPath>Things/Weapons/BoysRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.9,1.9)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>23000</WorkToMake>
			<SightsEfficiency>1.0</SightsEfficiency>
			<ShotSpread>0.01</ShotSpread>
			<SwayFactor>2.21</SwayFactor>
			<Bulk>17.7</Bulk>
			<Mass>15.87</Mass>
			<RangedWeapon_Cooldown>1.38</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>120</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<WoodLog>10</WoodLog>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>2.24</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_50BMG_FMJ</defaultProjectile>
				<warmupTime>2.8</warmupTime>
				<range>62</range>
				<soundCast>Shot_SniperRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<weaponTags>
			<li>Bipod_ATR</li>
			<li>CE_AI_SR</li>
		</weaponTags>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>5</magazineSize>
				<reloadTime>4.9</reloadTime>
				<ammoSet>AmmoSet_50BMG</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.4,0.0</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>