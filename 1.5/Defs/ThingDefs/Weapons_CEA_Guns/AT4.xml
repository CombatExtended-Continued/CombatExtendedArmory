		<graphicData>
			<texPath>Things/Weapons/AT4</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponClasses>
			<li>RangedHeavy</li>
