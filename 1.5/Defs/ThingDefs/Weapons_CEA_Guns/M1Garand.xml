<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== M1 Garand ==================== -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>CE_Gun_M1Garand</defName>
		<label>M1 Garand</label>
		<description>Ancient semi-automatic battle rifle. Fires a full-power rifle cartridge and is still in service due to its shear firepower and simplicity.</description>
		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Weapons/M1Garand</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.2,1.2)</drawSize>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>15000</WorkToMake>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.05</ShotSpread>
			<SwayFactor>1.53</SwayFactor>
			<Bulk>11.0</Bulk>
			<Mass>4.31</Mass>
			<RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
			<WoodLog>15</WoodLog>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>2.03</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_3006Springfield_FMJ</defaultProjectile>
				<warmupTime>1.1</warmupTime>
				<range>55</range>
				<soundCast>Shot_CE_BattleRifle</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>CE_AI_AR</li>
		</weaponTags>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>8</magazineSize>
				<reloadTime>4.3</reloadTime>
				<ammoSet>AmmoSet_3006Springfield</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>GasOperation</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.1,0.0</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>