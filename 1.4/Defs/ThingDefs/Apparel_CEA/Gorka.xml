<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Gorka ==================== -->

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>CE_Apparel_Gorka</defName>
    <label>gorka</label>
    <description>An outer bodysuit padded with armor fabrics for protection of limbs against shrapnel. Comes with a pair and boots and gloves.</description>
    <graphicData>
      <texPath>Things/Apparel/Gorka/Gorka</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.4</generateCommonality>
    <costList>
      <DevilstrandCloth>30</DevilstrandCloth>
    </costList>
    <costStuffCount>110</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToMake>16000</WorkToMake>
      <Mass>5.0</Mass>
      <Bulk>8.5</Bulk>
      <WornBulk>5</WornBulk>
      <Flammability>0.6</Flammability>
      <StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
      <ArmorRating_Sharp>1.5</ArmorRating_Sharp>
      <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
      <ArmorRating_Heat>0.1</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>1.5</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.1</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
        <li>Hands</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Gorka/Gorka</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>1</weight>
          <only>(0.43,0.07,0.07,1)</only>
        </li>
      </options>
    </colorGenerator>
    <modExtensions>
      <li Class="CombatExtended.PartialArmorExt">
         <stats>
           <li>
            <ArmorRating_Sharp>0.40</ArmorRating_Sharp>
            <parts>
              <li>Hand</li>
            </parts>
          </li>
           <li>
            <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
            <parts>
              <li>Hand</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Sharp>0.50</ArmorRating_Sharp>
            <parts>
              <li>Foot</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
            <parts>
              <li>Foot</li>
            </parts>
          </li>
        </stats>
      </li>
    </modExtensions>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
