<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Composite Helmet with Faceshield ==================== -->

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>CE_Apparel_CompositeHelmetShield</defName>
    <label>composite helmet (faceshield)</label>
    <description>A composite helmet with a faceshield mounted. It's a bit heavy and harder to aim in it but the extra coverage can mean a lot in close range engagements.</description>
    <graphicData>
      <texPath>Things/Apparel/CompositeHelmetShield/CompositeHelmetShield</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <techLevel>Industrial</techLevel>
    <generateCommonality>0.2</generateCommonality>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>35</Steel>
      <DevilstrandCloth>20</DevilstrandCloth>
      <Chemfuel>30</Chemfuel>
    </costList>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>2.5</Mass>
      <ArmorRating_Sharp>8</ArmorRating_Sharp>
      <ArmorRating_Blunt>12</ArmorRating_Blunt>
      <Bulk>4</Bulk>
      <ArmorRating_Heat>0.54</ArmorRating_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <AimingAccuracy>-0.1</AimingAccuracy>
      <Suppressability>-0.10</Suppressability>
    </equippedStatOffsets>
    <thingCategories Inherit='False'>
      <li>ArmorHeadgear</li>
    </thingCategories>
    <apparel>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <wornGraphicPath>Things/Apparel/CompositeHelmetShield/CompositeHelmetShield</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <layers>
        <li>Overhead</li>
        <li>StrappedHead</li>
      </layers>
      <tags>
        <li>IndustrialMilitaryAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <modExtensions>
      <li Class="CombatExtended.PartialArmorExt">
        <stats>
          <li>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <parts>
              <li>Eye</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
            <parts>
              <li>Eye</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <parts>
              <li>Nose</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
            <parts>
              <li>Nose</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <parts>
              <li>Jaw</li>
            </parts>
          </li>
          <li>
            <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
            <parts>
              <li>Jaw</li>
            </parts>
          </li>
        </stats>
      </li>
    </modExtensions>
    <tradeTags>
      <li>Armor</li>
    </tradeTags>
  </ThingDef>

</Defs>