<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Mini-14 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun_CEP">
    <defName>CE_Gun_MiniFourteen</defName>
    <label>Mini-14</label>
    <description>An ancient lightweight semi-automatic rifle design, widely popular in rimworlds due to it's venerable simplicity and accuracy.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/Mini14</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>21000</WorkToMake>
      <Mass>2.90</Mass>
      <Bulk>9.46</Bulk>
      <ShotSpread>0.11</ShotSpread>
      <SwayFactor>1.28</SwayFactor>
      <SightsEfficiency>2.24</SightsEfficiency>
      <RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <WoodLog>10</WoodLog>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>1.59</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_556x45mmNATO_FMJ</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>62</range>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>IndustrialGunAdvanced</li>
      <li>SniperRifle</li>
      <li>CE_AI_SR</li>
    </weaponTags>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>20</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_556x45mmNATO</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.25,1.45</DrawSize>
        <DrawOffset>0.08,-0.05</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>