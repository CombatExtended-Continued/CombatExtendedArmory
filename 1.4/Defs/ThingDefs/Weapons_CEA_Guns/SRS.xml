<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== SRS ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>CE_Gun_SRS</defName>
    <label>SRS</label>
    <description>Ancient bolt-action sniper rifle in bullpup design. Combines a powerful cartridge with a high-magnification scope for sniping at long range.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <graphicData>
      <texPath>Things/Weapons/SRS</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>36000</WorkToMake>
      <SightsEfficiency>3.0</SightsEfficiency>
      <ShotSpread>0.04</ShotSpread>
      <SwayFactor>1.13</SwayFactor>
      <Bulk>10.50</Bulk>
      <Mass>5.60</Mass>
      <RangedWeapon_Cooldown>1.36</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Chemfuel>10</Chemfuel>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>SniperRifle</li>
      <li>Bipod_DMR</li>
      <li>CE_AI_SR</li>
    </weaponTags>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_338Norma_FMJ</defaultProjectile>
        <warmupTime>1.8</warmupTime>
        <range>86</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>5</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_338Norma</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.12,1.12</DrawSize>
        <DrawOffset>0.05,0.0</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>