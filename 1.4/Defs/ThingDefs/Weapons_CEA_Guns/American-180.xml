<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== American-180 ==================== -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>CE_Gun_AmericanOneEighty</defName>
		<label>American-180</label>
		<description>Ancient submachine gun design, fires a small cartridge at a very fast rate and holds a lot of ammunition in a pan magazine.</description>
		<soundInteract>Interact_SMG</soundInteract>
		<graphicData>
			<texPath>Things/Weapons/American-180</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<weaponClasses>
			<li>RangedLight</li>
		</weaponClasses>
		<statBases>
			<WorkToMake>27000</WorkToMake>
			<Mass>2.80</Mass>
			<Bulk>8.62</Bulk>
			<ShotSpread>0.11</ShotSpread>
			<SwayFactor>1.02</SwayFactor>
			<SightsEfficiency>1.0</SightsEfficiency>
			<RangedWeapon_Cooldown>0.35</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<researchPrerequisite>BlowbackOperation</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Steel>45</Steel>
			<WoodLog>10</WoodLog>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>0.81</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_22LR_FMJ</defaultProjectile>
				<burstShotCount>10</burstShotCount>
				<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
				<warmupTime>0.6</warmupTime>
				<range>25</range>
				<soundCast>Shot_MachinePistol</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>275</magazineSize>
				<reloadTime>4.9</reloadTime>
				<ammoSet>AmmoSet_22LR</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>False</aiUseBurstMode>
				<aiAimMode>Snapshot</aiAimMode>
				<aimedBurstShotCount>5</aimedBurstShotCount>
			</li>
		</comps>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<weaponTags>
			<li>ShortShots</li>
			<li>CE_OneHandedWeapon</li>
			<li>CE_SMG</li>
			<li>CE_AI_BROOM</li>
		</weaponTags>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>1.15,1.15</DrawSize>
				<DrawOffset>0.03,0.0</DrawOffset>
			</li>
		</modExtensions>
