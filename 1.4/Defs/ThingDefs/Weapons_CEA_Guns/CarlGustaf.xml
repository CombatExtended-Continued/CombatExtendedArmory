<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Carl Gustaf ==================== -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>CE_Gun_CarlGustaf</defName>
		<label>Carl Gustaf</label>
		<description>A lightweight, low-cost recoilless rifle that uses a wide range of ammunition, extremely flexible and suitable for a wide variety of roles.</description>
		<graphicData>
			<texPath>Things/Weapons/CarlGustaf</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<weaponClasses>
			<li>RangedHeavy</li>
		</weaponClasses>
		<statBases>
			<WorkToMake>22500</WorkToMake>
			<SightsEfficiency>1.0</SightsEfficiency>
			<ShotSpread>0.2</ShotSpread>
			<SwayFactor>1.61</SwayFactor>
			<Bulk>10.50</Bulk>
			<Mass>6.6</Mass>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<costList>
			<Steel>75</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<weaponTags>
			<li>GunHeavy</li>
			<li>CE_AI_AOE</li>
		</weaponTags>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_84x246mmR_HEAT</defaultProjectile>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<warmupTime>1.9</warmupTime>
				<range>55</range>
				<minRange>8</minRange>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<soundCast>InfernoCannon_Fire</soundCast>
				<muzzleFlashScale>14</muzzleFlashScale>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>1</magazineSize>
				<reloadTime>5.6</reloadTime>
				<ammoSet>AmmoSet_84x246mmR</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>FALSE</aiUseBurstMode>
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>CE_Launchers</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2.44</cooldownTime>
				<armorPenetrationBlunt>3.5</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
		</tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>1.4,1.4</DrawSize>
				<DrawOffset>-0.2,0.0</DrawOffset>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>