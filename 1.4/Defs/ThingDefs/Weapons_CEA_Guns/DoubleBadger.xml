<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== Chiappa Double Badger ==================== -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>CE_Gun_DoubleBadger</defName>
		<label>Double Badger</label>
		<description>Ancient combination rifle, with both a rifled and smoothbore barrel.</description>
		<possessionCount>1</possessionCount>
		<graphicData>
			<texPath>Things/Weapons/Chiappa_Double_Badger</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Rifle</soundInteract>
		<statBases>
			<WorkToMake>8000</WorkToMake>
			<Mass>2.60</Mass>
			<RangedWeapon_Cooldown>0.85</RangedWeapon_Cooldown>
			<SightsEfficiency>1.00</SightsEfficiency>
			<ShotSpread>0.07</ShotSpread>
			<SwayFactor>1.17</SwayFactor>
			<Bulk>9.10</Bulk>
		</statBases>
		<costList>
			<WoodLog>10</WoodLog>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>0.84</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_22LR_FMJ</defaultProjectile>
				<warmupTime>1.1</warmupTime>
				<range>24</range>
				<soundCast>Shot_Autopistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>4</muzzleFlashScale>
				<recoilPattern>Regular</recoilPattern>
			</li>
		</verbs>
		<weaponTags>
			<li>CE_AI_AR</li>
		</weaponTags>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>1</magazineSize>
				<AmmoGenPerMagOverride>5</AmmoGenPerMagOverride>
				<reloadTime>0.85</reloadTime>
				<ammoSet>AmmoSet_22LR</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aiUseBurstMode>TRUE</aiUseBurstMode>
				<aiAimMode>AimedShot</aiAimMode>
			</li>
			<li Class="CombatExtended.CompProperties_UnderBarrel">
				<propsUnderBarrel>
					<magazineSize>1</magazineSize>
					<reloadTime>0.85</reloadTime>
					<ammoSet>AmmoSet_20Gauge</ammoSet>
				</propsUnderBarrel>
				<verbPropsUnderBarrel>
					<recoilAmount>2.84</recoilAmount>
					<verbClass>CombatExtended.Verb_ShootCE</verbClass>
					<hasStandardCommand>true</hasStandardCommand>
					<defaultProjectile>Bullet_20Gauge_Buck</defaultProjectile>
					<warmupTime>0.6</warmupTime>
					<range>16</range>
					<soundCast>Shot_Shotgun_NoRack</soundCast>
					<soundCastTail>GunTail_Medium</soundCastTail>
					<muzzleFlashScale>5</muzzleFlashScale>
				</verbPropsUnderBarrel>
				<propsFireModesUnderBarrel>
					<aiUseBurstMode>FALSE</aiUseBurstMode>
					<aiAimMode>Snapshot</aiAimMode>
					<aimedBurstShotCount>1</aimedBurstShotCount>
				</propsFireModesUnderBarrel>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisite>Gunsmithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>5</power>
				<cooldownTime>2.02</cooldownTime>
				<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.55</cooldownTime>
				<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
		</tools>
	</ThingDef>

</Defs>