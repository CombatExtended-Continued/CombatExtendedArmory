<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Tac-50 ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun_CE">
    <defName>CE_Gun_TacFifty</defName>
    <label>Tac-50</label>
    <description>Ancient bolt-action anti-materiel rifle. Combines a large caliber cartridge with a high-magnification scope for sniping at extreme range.</description>
    <graphicData>
      <texPath>Things/Weapons/Tac50</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <weaponClasses>
      <li>LongShots</li>
      <li>RangedHeavy</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>44500</WorkToMake>
      <SightsEfficiency>3.5</SightsEfficiency>
      <ShotSpread>0.02</ShotSpread>
      <SwayFactor>1.92</SwayFactor>
      <Bulk>15.48</Bulk>
      <Mass>11.80</Mass>
      <RangedWeapon_Cooldown>1.38</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>90</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Chemfuel>20</Chemfuel>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_50BMG_FMJ</defaultProjectile>
        <warmupTime>4.05</warmupTime>
        <range>86</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>5</magazineSize>
        <reloadTime>4</reloadTime>
        <ammoSet>AmmoSet_50BMG</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>FALSE</aiUseBurstMode>
        <aiAimMode>AimedShot</aiAimMode>
      </li>
    </comps>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags Inherit="False">
      <li>SniperRifle</li>
      <li>Bipod_DMR</li>
      <li>CE_AI_SR</li>
    </weaponTags>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.55,1.40</DrawSize>
        <DrawOffset>0.25,0.0</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>