<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== M1903 Springfield ==================== -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>CE_Gun_M1903Springfield</defName>
    <label>M1903 Springfield (Scoped)</label>
    <description>Ancient bolt-action rifle. Fires a full-power rifle cartridge and is a popular choice in the rimworlds due to its shear firepower and simplicity. Comes equipped with a scope.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Weapons/M1903</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>19500</WorkToMake>
      <SightsEfficiency>2.48</SightsEfficiency>
      <ShotSpread>0.05</ShotSpread>
      <SwayFactor>1.64</SwayFactor>
      <Bulk>11.0</Bulk>
      <Mass>4.6</Mass>
      <RangedWeapon_Cooldown>1.17</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>55</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
      <WoodLog>15</WoodLog>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>1.95</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_3006Springfield_FMJ</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>62</range>
        <soundCast>Shot_BoltActionRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>SniperRifle</li>
    </weaponTags>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>5</magazineSize>
        <reloadTime>4.3</reloadTime>
        <ammoSet>AmmoSet_3006Springfield</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>AimedShot</aiAimMode>
      </li>
    </comps>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.15,1.15</DrawSize>
        <DrawOffset>0.1,0.0</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>